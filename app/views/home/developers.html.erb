<% content_for :page_title, 'Contact Us' %>

<div id="content">
  <h1>Original Projects</h1>
  <div class="column col_75">
  <div id="contact" class="gray_box rounded">
     <h2>Please describe how you can help us in developing Original Projects applications.</h2>

      <% form_tag developer_create_url,:id => "contact_op" ,:method=> :post do %>
        <div>

          <label for="developer_name">Name</label><br/>
          <textarea name="developer[name]" id="developer_name" rows="0" cols="0"></textarea>

          <label for="developer_company">Company</label><br/>
           <input name="developer[company]" id="developer_company" size="30" type="text" value="" /><br/>

          <label for="developer_description">Brief Description</label><br/>
          <input name="developer[description]" id="developer_description" size="30" type="text" value="" /><br/>

          <label for="developer_links">Links to other applications</label><br/>
          <input name="developer[links]" id="developer_links" size="30" type="text" value="" />
   <label for="developer_email">Email address</label><br/>
          <input name="developer[email]" id="developer_email" size="30" type="text" value="" />

          <br clear="all">
          <button type="submit" name="submit">Send</button>

        </div>
      <% end %>
    </div>
  </div>
  <div class="column col_25">
     <h3>Mailing Address</h3>
     <p>
       Original Projects<br/>
       1011 10th Street<br/>
       Sacramento, CA 95814<br/>
       1-888-252-3146
       </p>
   </div>
  </div>

