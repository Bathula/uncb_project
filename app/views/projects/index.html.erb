

<div id="content">
  <div style="margin-right:10px;display:inline;">
    <h1>Projects</h1>
  </div>
  <div style="float:right;display:inline;padding-right:50px;">
    <ul class="service_filter">
      <li><span style="position:relative;top:10px;padding:4px;background:#efefef;color:#666666;margin:6px;border:1px solid #cccccc;" class="rounded">sort by</span></li>
      <li class="first"><a href="/projects/?sort=highestrated&category=<%= params['category'] %>"<% if params[:sort] == "highestrated" || !params[:sort]  %> class="active"<% end %>>Peer Rating</a></li>
      <li ><a href="/projects/?sort=highestpro&category=<%= params['category'] %>"<% if params[:sort] == "highestpro"  %> class="active"<% end %>>Pro Rating</a></li>
     <!-- <li ><a href="/projects/?sort=mostrated&category=<%= params['category'] %>"<% if params[:sort] == "mostrated"  %> class="active"<% end %>>Rating Count</a></li>
      <li><a href="/projects/?sort=a-z&category=<%= params['category'] %>"<% if params[:sort] == "a-z" %> class="active"<% end %>>A-Z</a></li>
      <li><a href="/projects/?sort=location&category=<%= params['category'] %>"<% if params[:sort] == "location" %> class="active"<% end %>>Location</a></li>-->
      <!--<li class="last"><a href="/projects/?sort=category&category=<%#= params['category'] %>"<% if params[:sort] == "category" %> class="active"<% end %>>Category</a></li>-->
      <% if logged_in? %>
        <li><a class="small_button rounded" style="margin-left:24px;" href="/projects/new">Start your Project &rarr;</a></li>
      <% end %>
    </ul>
  </div>
  <div style="clear:both;"></div>
  <div class="column col_25" style="height:5200px;">
    <div id="category_box" class="avatar_box_side" style="width:170px;padding:0px;overflow: scroll; height: 850px;">
      <div class="avatar_box_side_title">
        <h2>Categories</h2>
      </div>
      <ul class="service_categories">
        <li>
          <a href="/projects/?category=All" style="border-top:0px;"<% if params[:category] == "All" || !params[:category] || params[:category] == ""%> class="active"<% end %>>All</a>
        </li>



        <% @categories.each do |category| -%>
          <li>
            <a href="/projects/?sort=<%= params['sort'] %>&category=<%= category.id %>&page=1"<% if params[:category] == "#{category.id}" %> class="active"<% end %>><%= category.name %></a>
          </li>
        <% end -%>

      </ul>
      <div style="clear:both;"></div>
    </div>
  </div>

<!--<div id="content" style="float:left; margin-top:-20px;">-->
  
 
  <div class="column_75">

    <% @projects.each do |project| -%>
      <%= render :partial => 'thumb', :locals => {:project => project, :originators => project.originators} %>
    <% end -%>
    <%if @projects.any?%>
      <div class="top2">
        <p><%=will_paginate @projects%></p>
        <p>
          <a href="#top"><span class="arrow">&#8593;</span> Top of page</a>
        </p>
      </div>
    <%else%>
  
    <div style="float:left;padding-left:130px;padding-top:120px;">
      There are currently no Projects for this Category</div>
    <%end%>
  </div>
</div>
